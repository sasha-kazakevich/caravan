.about
  border 3px solid red
  width 100%
  height 100%
  h1
    text-align center
    color #ffff00
  p,ul
    font-size 18px
    font-family 'HelveticaNeueCyr-Light'
  p
    text-indent 15px
    margin 0
  ul
    list-style-type none
    margin 15px 0
    padding-left 15px
  +below(mobile-breakpoint)
    text-align justify
    h1
      font-size 24px
    p,ul
      font-size 16px
