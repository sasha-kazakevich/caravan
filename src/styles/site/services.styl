.services
  figure
    margin 0
  +below(mobile-breakpoint)
    .services-group-one
      flex-direction column
      align-items center
      figure
        width 100%
        img
          width 80px
          height 80px
        figcaption
          font-size 16px
          padding 5px 0
        &:nth-child(4)
          figcaption
            padding 0
    .services-group-two
      padding 20px 10px 0
      .title
        font-size 16px
      .text
        padding 0
        font-size 14px
      .group-two-text
        padding-left 60px
.services-group-one
  display flex
  flex-wrap wrap
  text-align center
  figure
    width 33%
    img
      width 160px
      height 160px
    figcaption
      text-align center
      font-size 18px
      color #ffff00
      padding 20px 10px
    &:nth-child(4)
      figcaption
        padding 20px 40px
.services-group-two
  padding 50px 100px 20px
  img
    padding-top 10px
    float left
  .title
    font-size 24px
  .text
    padding 0
  .group-two-text
    padding-left 110px
